<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="login"
    android:orientation="vertical">

    <TextView
        android:id="@+id/username_input1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="68dp"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:tag="@string/username"
        android:text="@string/username"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/username_input"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"

        android:autofillHints="no"
        android:background="@drawable/outlined"
        android:ems="10"

        android:inputType="text"
        android:labelFor="@id/username_input1"
        android:minHeight="48dp"
        android:padding="16dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="LabelFor,MissingConstraints,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/password_input1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:tag="@string/Password"
        android:text="@string/Password"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password_input"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_marginHorizontal="16dp"

    android:background="@drawable/outlined"
    android:ems="10"

    android:importantForAutofill="no"
    android:inputType="textPassword"
    android:labelFor="@id/password_input1"
    android:minHeight="48dp"
    android:padding="16dp"

    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView3"
    tools:ignore="DuplicateIds,DuplicateSpeakableTextCheck,LabelFor,MissingConstraints,VisualLintTextFieldSize,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/texttest"
        android:layout_width="170dp"
        android:layout_height="40dp"

        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:autoLink="all"
        android:onClick="showNotification"
        android:paddingHorizontal="12dp"
        android:text="@string/trouble_logging_in"
        android:textColor="@color/purple"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button"
        tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="16dp"

        android:backgroundTint="@color/purple"
        android:onClick="twoFactor"
        android:paddingHorizontal="24dp"
        android:text="@string/login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_input"
        tools:ignore="MissingConstraints,VisualLintButtonSize,TextContrastCheck,TouchTargetSizeCheck" />

</LinearLayout>